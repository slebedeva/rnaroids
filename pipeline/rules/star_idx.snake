
""" rules to generate STAR indicies for two pass mapping """

rule star_idx:
  input:
    {GENOME} 
  output:
    "{GENOME_DIR}/Genome"
  params:
    job_name = "star_idx",
  log:
    "{GENOME_DIR}/logs/"
  threads:
    4 
  message:
    "building star index "
  shell:
    """
    STAR --runMode genomeGenerate \
      --genomeDir {GENOME_DIR}  \
      --genomeFastaFiles {GENOME} \
      --runThreadN {threads} \
      --sjdbGTFfile {TRANSCRIPTS} \
    """


